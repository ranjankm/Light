<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_view_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:background="@color/colorPrimary" />

        <RelativeLayout
            android:id="@+id/shop_login_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:src="@drawable/shop_logo" />

                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:inputType="none"
                    android:text="SHOP NAME"
                    android:textColor="@color/colorWhite"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/shop_password"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/white_box"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:hint="Enter password"
                    android:inputType="textPassword"
                    android:padding="5dp" />

                <Button
                    android:id="@+id/shop_login_button"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:background="@drawable/accent_box"
                    android:fontFamily="sans-serif-condensed"
                    android:text="LOGIN"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/change_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:text="NOT YOUR SHOP?"
                android:textColor="@color/colorWhite"
                android:textSize="10sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/shop_register_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:src="@drawable/shop_logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seems like you haven't registered any shop. Please register your shop"
                android:textColor="@color/colorWhite"
                android:padding="@dimen/activity_horizontal_margin"
                android:textSize="15sp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/shop_register_button"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/accent_box"
                android:fontFamily="sans-serif-condensed"
                android:text="REGISTER"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>